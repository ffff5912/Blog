{% extends 'base.html.twig' %}

{% block body %}
<section>
    <div class="container">
        <div class="row pad-row">
            <div class="">
                {% for blog in blogs %}
                <a href="{{ path('blog_show', {'id': blog.id}) }}">
                    <h2>{{ blog.title }}</h2>
                </a>
                <p>
                    {{ blog.content }}
                </p>
                {% endfor %}
            </div>
        </div>
    </div>
</section>
{% endblock %}
